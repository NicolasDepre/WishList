<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.NewFriendActivity"
    android:background="@drawable/background">



    <TextView
        android:id="@+id/title_new_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Search for new friends"
        android:textAlignment="center"
        android:layout_marginBottom="150dp"
        android:textSize="28dp" />

    <TextView
        android:id="@+id/new_friends_username_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username of you friend"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/title_new_friend"/>

    <EditText
        android:id="@+id/new_friends_username_inputfield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/new_friends_username_textview"
        android:hint="Friends Username"
        />

    <TextView
        android:id="@+id/alerteTextNewFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text=" "
        android:layout_centerHorizontal="true"
        android:layout_below="@id/new_friends_username_inputfield"
        />

    <Button
        android:id="@+id/search_for_friend_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add new friend"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_below="@id/alerteTextNewFriend"
        android:onClick="addFriendButton"
        />


</RelativeLayout>