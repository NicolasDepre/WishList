<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.NewListActivity"
    android:background="@drawable/background">



    <TextView
        android:id="@+id/title_new_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/title_activity_new_list"
        android:textAlignment="center"
        android:layout_marginBottom="150dp"
        android:textSize="28dp" />

    <TextView
        android:id="@+id/new_list_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name of the list"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/title_new_list"/>

    <EditText
        android:id="@+id/new_list_name_inputfield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/new_list_name_textview"
        android:hint="Name"
        />
    <TextView
        android:id="@+id/new_list_share_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friends you want to share the list with"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/new_list_name_inputfield"/>

    <EditText
        android:id="@+id/new_list_share_inputfield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/new_list_share_textview"
        android:hint="Friends"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_below="@id/new_list_share_inputfield"
        android:onClick="createNewList"
        />


</RelativeLayout>