<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/title_loginpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="98dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="80dp"
        android:hint="@string/app_name"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        android:visibility="visible"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/username_field_loginpage"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@id/title_loginpage"
        android:layout_marginStart="99dp"
        android:layout_marginEnd="99dp"
        android:ems="10"
        android:hint="@string/username"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/password_field_loginpage"
        android:layout_width="213dp"
        android:layout_height="45dp"
        android:layout_below="@id/username_field_loginpage"
        android:layout_marginStart="99dp"
        android:layout_marginEnd="99dp"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/login_button_loginpage"
        android:layout_width="129dp"
        android:layout_height="48dp"
        android:layout_below="@id/password_field_loginpage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="loginButton"
        android:text="@string/log_in" />

    <TextView
        android:id="@+id/alerteTextLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_button_loginpage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="login_succes / Login_failed"
        android:visibility="invisible" />

    <Button
        android:id="@+id/signup_button_loginpage"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/alerteTextLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:onClick="gotoRegisterView"
        android:text="@string/sign_up" />


</RelativeLayout>
