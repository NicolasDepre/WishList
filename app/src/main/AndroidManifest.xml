<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="be.LaPireTeam.wishlist">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.NewFriendActivity"></activity>
        <!-- Activity -->
        <activity
            android:name=".Activity.SeeDetailsWish"
            android:parentActivityName=".Activity.SeeWishesActivity" />
        <activity
            android:name=".Activity.NewWishActivity"
            android:parentActivityName=".Activity.SeeWishesActivity" />
        <activity
            android:name=".Activity.NewListActivity"
            android:parentActivityName=".Activity.MyListsActivity" />
        <activity
            android:name=".Activity.SeeWishesActivity"
            android:parentActivityName=".Activity.MyListsActivity" />
        <activity
            android:name=".Activity.MenuActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.MyListsActivity"
            android:label="@string/title_activity_my_lists"
            android:parentActivityName=".Activity.MenuActivity" />
        <activity
            android:name=".Activity.AmisActivity"
            android:label="@string/title_activity_amis"
            android:parentActivityName=".Activity.MenuActivity" />
        <activity
            android:name=".Activity.ProfilActivity"
            android:label="@string/title_activity_profil"
            android:parentActivityName=".Activity.MenuActivity" />
        <activity
            android:name=".Activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>